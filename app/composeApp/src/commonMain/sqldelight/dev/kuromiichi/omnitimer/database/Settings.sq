CREATE TABLE Settings (
    name TEXT NOT NULL PRIMARY KEY,
    value TEXT NOT NULL
);

selectSettings:
SELECT * FROM Settings;

selectSetting:
SELECT value FROM Settings
WHERE name = ?;

updateSetting:
UPDATE Settings
SET value = ?
WHERE name = ?;

